<section class="jumbotron jumbotron-fluid home-page-banner position-relative">
  <div class="container text-white text-center border p-5 d-flex flex-column align-items-center bg-white-transparent">
    <h1 class="display-5 text-shadow mb-2"><strong>Book your diving worldwide</strong></h1>
    <div class="pt-4 rounded-pill col-8" style="background: #003059">
      <div class="align-items-center">
        <%= form_tag centers_path, method: :get do %>
          <div class="d-flex mx-4">
            <%= text_field_tag :location,
                params[:location],
                class: "form-control mr-sm-2",
                placeholder: "Where do you want to go?"
            %>
            <%= submit_tag "Search", class: "btn btn-danger mb-4 shadow-lg" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="shop-bar shadow">
      <%= link_to centers_path, class: "shop py-4" do%>
        <div>
          <i class="fas fa-house-user mb-2"></i>
          <div>Centers</div>
        </div>
      <% end %>
      <%= link_to trips_path, class: "shop" do%>
        <div>
          <i class="fas fa-ship mb-2"></i>
          <div>Dives</div>
        </div>
      <% end %>
      <%= link_to courses_path, class: "shop" do%>
        <div>
          <i class="fas fa-book mb-2"></i>
          <div>Courses</div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<div class="d-flex flex-column justify-content-center align-items-center" style="height:50vh; margin-top: 10rem; margin-bottom: 10rem;">
  <h2 class="mb-4 font-weight-bold">Top diving destinations</h2>
  <h4 class="text-center mb-4">Book a trip in one the world's top diving destinations.</h4>
    <%= render "carousel", locations: @locations %>
</div>

<div class="container d-flex flex-column justify-content-center align-items-center" style="height:30vh; margin-top: 10rem; margin-bottom: 10rem;">
  <h2 class="mb-4 text-center font-weight-bold">Where will your next scuba diving trip take you?</h2>
  <h4 class="text-center mb-4">There's a world of underwater adventure waiting for you. As a certified diver, you hold a lifelong passport to the last frontier. Experience pristine marine ecosystems, vibrant worlds of colorful fish and silent shipwrecks holding ancient secrets.</h4>
</div>

<div class="d-flex flex-column justify-content-center align-items-center" style="height:50vh; margin-top: 10rem; margin-bottom: 10rem;">
  <h2 class="mb-4 font-weight-bold">Find top dives by interest</h2>
  <%= render "top_interests", interests: @interests %>
</div>

