<div class="jumbotron jumbotron-fluid home-page-banner">
  <div class="container text-white text-center">
    <h1 class="display-4">Book your diving worldwide</h1>
    <p class="lead">The form will be here when @centers is created</p>
    <div class="d-flex justify-content-center align-items-center">
      <%= form_tag centers_path, method: :get do %>
        <div class="d-flex" style="width: 40vw">
          <%= text_field_tag :query,
              params[:query],
              class: "form-control mr-sm-2",
              placeholder: "Where do you want to go?"
          %>
          <%= submit_tag "Search", class: "btn btn-primary mb-4" %>
        </div>
      <% end %>
    </div>
    <div class="shop-bar">
      <%= link_to "Centers", centers_path, class: "shop" %>
      <%= link_to "Trips", trips_path, class: "shop" %>
      <%= link_to "Courses", courses_path, class: "shop" %>
    </div>
  </div>
</div>
