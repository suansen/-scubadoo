<!--Carousel Wrapper-->
<div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

<!--Controls-->
<div class="controls-top">
  <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
  <a class="btn-floating" href="#multi-item-example" data-slide="next"><i class="fas fa-chevron-right"></i></a>
</div>

<!--/.Controls-->

<!--Indicators-->
<ol class="carousel-indicators">
  <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
  <li data-target="#multi-item-example" data-slide-to="1"></li>  
</ol>
<!--/.Indicators-->

<!--Slides-->
<div class="carousel-inner mb-3" role="listbox">

<!--First slide-->
  <div class="carousel-item active">
    <% 4.times do %>
      <div class="col-md-3" style="float:left">
        <div class="card mb-2">
            <img class="card-img-top" src="https://images.unsplash.com/photo-1586115457457-b3753fe50cf1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1088&q=80" alt="Sharks">
            <div class="card-body">
                <h4 class="card-title"><strong>Dive with Sharks</strong></h4>
                <p class="card-text">Sharks aren't a reason to stay out of the water; they're a reason to dive in.</p>
            </div>
        </div>
      </div>
    <% end  %>
  </div>
<!--/.First slide-->

<!--Second slide-->
  <div class="carousel-item">
    <% 4.times do %>
      <div class="col-md-3" style="float:left">
        <div class="card mb-2">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1559076948-db842bea853a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="Scuba boy">
          <div class="card-body">
          <h4 class="card-title"><strong>Cold Water Diving</strong></h4>
          <p class="card-text">How to stay warm. You don't want to freeze to death - trust us on this.</p>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
<!--/.Second slide-->

  </div>
<!--/.Slides-->

</div>
<!--/.Carousel Wrapper-->