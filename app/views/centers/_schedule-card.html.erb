<div class="d-flex flex-wrap justify-content-start">
<%# listings & center %>
  <% listings.each do |list| %>
    <div class="rounded shadow-sm mb-3" style="width:100%;">
      <div class="bg-dark d-flex align-content-center" style="height:48px;" ><p class="p-3" style="color:white;"><%= list.date.strftime('%^b %d, %Y') %></p></div>
      <div class="d-flex p-3 justify-content-between">
        <div class="d-flex"></div>
          <% if list.duration >= 24 %>
            <div class="mr-3"><%= list.start_time.strftime('%H:%M') %> - <%= list.duration / 24 %> day</div>
          <% else %>
            <div class="mr-3"><%= list.start_time.strftime('%H:%M') %> - <%= list.duration %> hour</div>
          <% end %>
          <div><%= list.name %></div>
        </div>
        <div>SGD <%= list.price %></div>
      </div>
    </div>
  <% end %>
</div>
