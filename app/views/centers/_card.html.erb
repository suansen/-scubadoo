<% centers.each do |center| %>
  <div class="card m-2 rounded  overflow-hidden shadow-sm">
    <%= link_to center_path(center), style:"text-decoration:none; color:black;" do%>
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= image_tag "diving_1", style:"width:100%" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= center.name.upcase %></h5>
            <p class="card-text"><%= center.location %></p>
            <p class="card-text"><%= center.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
