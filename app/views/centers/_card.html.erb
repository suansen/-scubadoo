<div class="d-flex flex-column align-items-center justify-content-center bg-light" style="position:sticky; top:0px; width:100%;">
    <h2 class="mt-3""><%= @centers.count %> dive centers in the world</h2>
    <%# <%= render "shared/sidebar", centers: @centers %>
  </div>

<% centers.each do |center| %>
<div class="card mb-2 p-3 border-none overflow-hidden">
      <div class="row no-gutters ml-3">
        <div class="col-md-5" style="max-height:220px;border-radius:15px; overflow:hidden;">
          <%= cl_image_tag (center.photo.key), style: "height: 100%; object-fit:contain;", crop: :fill %>
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <h5 class="card-title"><%= center.name.upcase %></h5>
            <p class="card-text"><i class="fas fa-map-marker-alt"></i> <%= center.location %></p>
            <p class="card-text"><%= center.description %></p>
            <div><%= link_to "View details", center_path(center), class:"btn btn-success ", style:"text-decoration:none; color:white;"%></div>
          </div>
        </div>
      </div>

  </div>
<% end %>
