<div>
  <div class="row mr-0 align-items-start">
    <div class="col-md-5 p-0">
      <div class="d-flex flex-column align-items-center justify-content-center bg-light" style="position:sticky; top:0px; width:100%;">
      <h2 class="mt-3"><%= @trips.count %> diving sites listed in <%= params[:location].present? ? params[:location].capitalize : "the world" %></h2>
      <div style="width:100%;"><%= render "shared/sidebar", centers: @courses %></div>
    </div>
      <%= render @trips %>
    </div>
    <div class="col-md-7 p-0" style="position:sticky; top:0px;">
      <div id="map"
          style="width: 100%; height: 100vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
